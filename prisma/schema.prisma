generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  OWNER
  USER
}

enum ScheduleStatus {
  FINISHED
  CONFIRMED
  PENDING
  CANCELLED
}

enum PropertyType {
  HOUSE
  APARTMENT
}

model User {
  id       String     @id @default(uuid())
  name     String
  email    String     @unique
  password String
  role     UserRole   @default(USER)
  createAt DateTime   @default(now())
  Property Property[]
  Schedule Schedule[]

  @@map("users")
}

model Property {
  id          String       @id @default(uuid())
  title       String
  description String
  price       String
  type        PropertyType

  address Address?

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  Schedule Schedule[]

  @@map("properties")
}

model Address {
  id         String   @id @default(uuid())
  country    String
  state      String
  city       String
  street     String
  number     String
  zipcode    String
  propertyId String   @unique
  Property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model Schedule {
  id        String         @id @default(uuid())
  startTime DateTime
  endTime   DateTime
  status    ScheduleStatus @default(PENDING)

  userId     String
  propertyId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  Property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@map("schedules")
}
